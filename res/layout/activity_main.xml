<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расчет зарплаты" />

    <TextView
        android:id="@+id/tvTr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:background="#AFEEEE"
        android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Тарифная ставка: 91руб"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvFt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:background="#AFEEEE"
        android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Фонд времени: 176 ч."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Премии" />
    
        <TextView
        android:id="@+id/tvPc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#AFEEEE"
         android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Цеховая: 35%"
        android:textSize="20sp" />
        
    <TextView
        android:id="@+id/tvPv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#AFEEEE"
         android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Вредность: 0%"
        android:textSize="20sp" />
    
        <TextView
        android:id="@+id/tvPp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#AFEEEE"
         android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Проф.мастерство: 12%"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дополнительные расходы" />
        
        <TextView
        android:id="@+id/tvRp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:background="#AFEEEE"
         android:clickable="true"
        android:onClick="@string/onClick"
        android:text="Питание: 780руб"
        android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:orientation="vertical"
                android:background="#FFE4B5" >

                <TextView
                    android:id="@+id/tvTarif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="По тарифу:" />

                <TextView
                    android:id="@+id/tvNach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Начисление:" />

                <TextView
                    android:id="@+id/tvNalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Налог: 2000руб." />

            </LinearLayout>

            <TextView
                android:id="@+id/tvZp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="50dp"
                android:background="#FFE4B5"
                android:text="Зарплата: 17000руб"
                android:textSize="20sp" />

        </FrameLayout>
        
</LinearLayout>
